<% include ./partials/header %>

  <div class="ui main text container">
    <div class="ui top attached segment">
      <div class="item">
        <div class="ui huge header">
          <%=plNews.title%>
        </div>
        <img class="ui centered rounded image" src="<%= plNews.image %>">
        <div class="content">
          <div class="meta">
            <span>
							Created at: <%= plNews.created.toDateString() %>
						</span>
          </div>
          <div class="description">
            <p>
              <%- plNews.description %>
            </p>
          </div>
        </div>
      </div>
      <% if(currentUser && plNews.author.id.equals(currentUser._id) || currentUser && currentUser.isSuperAdmin) { %>
        <a href="/premire-league/news/<%=plNews._id%>/edit" class="ui orange basic button">Edit News</a>
        <form style="display: inline" action="/premire-league/news/<%= plNews._id %>?_method=DELETE" method="POST">
          <button class="ui red basic button" type="submit">Delete News</button>
        </form>
        <% } %>

    </div>
  </div>

  <div class="ui main text container">

    <div class="ui top attached segment">
      <span class="d-inline-block" data-toggle="popover" data-content="Disabled popover">
  <button class="btn btn-lg btn-dark" style="pointer-events: none;" type="button" disabled>Comments Feed</button>
</span>
      <% plNews.comments.forEach(function(comment){ %>
        <div class="ui comments">
          <div class="comment">
            <!-- <a class="avatar">
							<img class="avatar" src="https://semantic-ui.com/images/avatar/small/stevie.jpg">
						  </a> -->
            <div class="content">
              <span class="d-inline-block" data-toggle="popover" data-content="Disabled popover">
  					<button class="btn btn-xs btn-outline-dark" style="pointer-events: none;" type="button" disabled><%= comment.author.username.toUpperCase() %></button>
						</span>
              <div class="metadata">
                <div class="date">
                  <%= comment.created.toDateString() %>
                </div>
              </div>
              <div class="text">
                <i>
									<%= comment.text %>
								</i>
                <% if (currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isSuperAdmin) { %>
                  <a href="/premire-league/news/<%=plNews._id%>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-outline-warning">Edit Comments</a>
                  <form style="display: inline" action="/premire-league/news/<%= plNews._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-xs btn-outline-danger" type="submit">Delete Comments</button>
                  </form>
                  <% } %>
              </div>
            </div>
          </div>
          <% }) %>
            <% if(currentUser){ %>
              <form class="ui reply form" action="/premire-league/news/<%= plNews._id %>/comments" method="POST">
                <div class="ui huge header">Add New Comment to this article </div>
                <div class="field">
                  <textarea class="field" name="comment[text]" required></textarea>
                </div>
                <input class="ui violet big basic button" type="submit">
              </form>
              <% } %>
        </div>







        <% include ./partials/footer %>
