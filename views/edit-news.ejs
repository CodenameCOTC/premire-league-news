<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= plNews.title %></div>
    <form class="ui form" action="/premire-league/news/<%= plNews._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="news[title]" value="<%= plNews.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="news[image]" value="<%= plNews.image %>">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="news[description]"><%= plNews.description %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>



<% include ./partials/footer %>