<% include ./partials/header %>
  <script src="https://cdn.ckeditor.com/4.9.1/full/ckeditor.js"></script>
  <div class="container justify-content-center">
    <h5>Edit:
      <%= plNews.title %>
    </h5>
    <form action="/premire-league/news/<%= plNews._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" value="<%= plNews.title %>" name="news[title]">
        <small class="form-text text-muted">This field is required</small>
      </div>

      <div class="form-group">
        <label for="Tags">Tags</label>
        <input type="text" class="form-control" value="<%= plNews.tags %>" name="news[tags]">
        <small class="form-text text-muted">This field is required</small>
      </div>

      <div class="form-group">
        <label for="Content">News Content</label>
        <textarea class="form-control" id="editor1" name="news[description]">
          <%=plNews.description %>
        </textarea>
        <script>
          CKEDITOR.replace('editor1');
        </script>
      </div>
      <input type="submit" class="btn btn-outline-dark" value="Update">
    </form>
  </div>





  <% include ./partials/footer %>