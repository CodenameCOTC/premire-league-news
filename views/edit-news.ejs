<% include ./partials/header %>
  <br>
  <br>
  <script src="https://cdn.ckeditor.com/ckeditor5/1.0.0-alpha.2/classic/ckeditor.js"></script>

  <div class="ui main text container segment">
    <div class="ui huge header">Edit:
      <%= plNews.title %>
    </div>
    <form class="ui form" action="/premire-league/news/<%= plNews._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="news[title]" value="<%= plNews.title %>">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="news[image]" value="<%= plNews.image %>">
      </div>
      <div class="field">
        <label>Post Content</label>
        <textarea name="news[description]" id="editor">
                    <%= plNews.description %>
                </textarea>
        <script>
          ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
              console.error(error);
            });
        </script>
      </div>
      <input class="ui violet big basic button" type="submit">
    </form>
  </div>


  <% include ./partials/footer %>